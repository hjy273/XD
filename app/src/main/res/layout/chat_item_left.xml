<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/id_tv_chat_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/id_iv_chat_item_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/id_tv_chat_time"
        android:padding="10dp"
        android:src="@drawable/ic_sex_female" />

    <com.tyb.xd.view.GifTextView
        android:id="@+id/id_gtv_chat_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_chat_time"
        android:layout_marginRight="100dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/id_iv_chat_item_img"
        android:background="@drawable/chatfrom_bg"
        android:gravity="left" />

</RelativeLayout>
