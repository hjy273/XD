<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_thin_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/id_homedown_hall_iv_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:src="@drawable/hall_gray" />

            <TextView
                android:id="@+id/id_homedown_hall_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_homedown_hall_iv_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/hall"
                android:textColor="@color/text_color_thin_gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/id_homedown_communicate_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:src="@drawable/news_gray" />

            <TextView
                android:id="@+id/id_homedown_communicate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_homedown_communicate_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/message"
                android:textColor="@color/text_color_thin_gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/id_homedown_my_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:src="@drawable/my_gray" />

            <TextView
                android:id="@+id/id_homedown_my_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_homedown_my_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/my"
                android:textColor="@color/text_color_thin_gray"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

